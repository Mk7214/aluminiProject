{
	// Visit https://aka.ms/tsconfig to read more about this file
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"lib": ["es2022"],
		"rootDir": "./src",
		"outDir": "./dist",
		"sourceMap": true,
		"noImplicitAny": true,
		"types": ["node", "express"],
		"typeRoots": ["./src/types", "./node_modules/@types"]
	},
	"include": ["./src/**/*", "temp"]
}
